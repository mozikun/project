<script>
$(document).ready(function(){
	$("select[name='hospital']").click(function(){
	  gethospital();
	});
});	
//获取医院列表
function gethospital(){
	$.ajax({
		type:"post",
		url:"<!--{$basePath}-->web/register/gethospital",
		beforSend:function(){
			$("select[name='hospital']").html("<option>获取中,请稍后...</option>");
		},
		dataType:"json",
		success:function(info){
			for(i=0;i<info.length;i++){
			$("select[name='hospital']").html("<option value='"+info[i].id+"'>"+info[i].name+"</option>");
			}
		}
	});
}
	
</script>		  