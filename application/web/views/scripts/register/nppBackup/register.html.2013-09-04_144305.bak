<script>
$(document).ready(function(){
	$("input[name='yiyuan']").click(function(){
	var input=$(this);
	$("#tips").css("top",input.offset().top+input.height()+5+"px").css("left",input.offset().left).show();
	input.blur(function(){
		$("#tips").hide();
	});
	 gethospital();
	});
});	
//获取医院列表
function gethospital(){
	$.ajax({
		type:"post",
		url:"<!--{$basePath}-->web/register/gethospital",
		beforeSend:function(){
			$("#tips").css("width","200").html("<ul><li><img src='<!--{$basePath}-->views/images/load.gif'/></li></ul> ");
		},
		dataType:"json",
		success:function(info){
			var str="";
			for(i=0;i<info.length;i++){
				str+="<li>"+info[i].name+"</li>";
			}
			$("#tips").html("<ul><a>"+str+"</a></ul>");
		}
		
	});
}
	
</script>		  