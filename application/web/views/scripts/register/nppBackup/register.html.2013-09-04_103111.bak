function gethospital(){
	$.ajax({
		type:"post",
		url:"<!--{$basePath}-->web/register/gethospital",
		beforeSend:function(){
			$("select[name='hospital']").html("<option>获取中,请稍后...</option>");
		},
		dataType:"json",
		success:function(info){
			$("select[name='hospital']").html("");
			for(i=0;i<info.length;i++){
				$("select[name='hospital']").append("<option value='"+info[i].id+"'>"+info[i].name+"</option>");
			}
			
		}
	});
}
	
